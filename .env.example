# Application Configuration
APP_NAME=Townhall Document Management API
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=true

# MongoDB Configuration
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_DATABASE=townhall_db
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=admin123

# Security & Authentication
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@townhall.com
SMTP_FROM_NAME=Townhall System

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# MongoDB Express (Development only)
MONGOEXPRESS_LOGIN=admin
MONGOEXPRESS_PASSWORD=pass

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
